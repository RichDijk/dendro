<table>
    <tr class="form-group sidebar-item" ng-repeat="item in $eval(attr()) track by $index">
        <td>
            {{item.label}}
        </td>

        <td ng-if="item.type === 'dropdown'">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                {{item.selected}} <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li ng-repeat="iterator in item.value track by $index"><a href="#" ng-click="item.selected = iterator.name; getRegistry()">{{iterator.name}}</a></li>
            </ul>
        </td>

        <td ng-if="item.list && item.type !== 'dropdown'" class="{{item.type}}" ng-repeat="iterator in item.value track by $index">
            <label ng-if="item.type !== 'dropdown'">
                <input ng-model="iterator.value" ng-change="getRegistry()" ng-model-options="{debounce : 250}" type="{{item.type}}">
                {{iterator.name}}
                <b ng-if="iterator.count">({{iterator.count}})</b>
            </label>
        </td>
        <td>
            <input ng-if="!item.list" ng-model="item.value" ng-change="getRegistry()" ng-model-options="{debounce : 500}" type="{{item.type}}">
        </td>
    </tr>
</table>