<ul class="list-group" id="keyword_explorer_area">

    <a ng-repeat="cluster in clusters"
       ng-show="clusters != null"
       href="#"
       class="list-group-item ng-hide">
        <div class="row">
            <div class="col-lg-12">
                <h7 class="list-group-item-heading">
                    <a ng-repeat="term in cluster"
                       ng-show="cluster != null"
                       ng-click="clicked_term_explorer_node($index)"
                       nc-blur="clear_selected_terms()"
                       ng-class="{active: term.selected}"
                       href="#"
                       class="list-group-item ng-hide">
                        <div class="row">
                            <div class="col-lg-12">
                                <h7 class="list-group-item-heading">
                                    <table class="explorer-table">
                                        <tr>
                                            <td ng-show="multiple_term_selection">
                                                <img src="/images/icons/check_box_uncheck.png" ng-show="!term.selected">
                                                <img src="/images/icons/check_box.png" ng-show="term.selected">
                                            </td>
                                            <td class="term-tablecell">
                                                <medium>{{term.words}}</medium>
                                                <div class="help-block">
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </h7>
                            </div>
                        </div>
                    </a>
                </h7>
            </div>
        </div>
    </a>
</ul>