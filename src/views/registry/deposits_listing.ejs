<div ng-controller="depositCtrl" class="container" ng-init="init()" >
    <div class="row">

        <section class="content">
            <h3>Latest deposits</h3>
            <!--TODO show warning if no deposit is available-->

            <div ng-if="totalDeposits === 0" class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-3">No deposits listed! </h1>
                    <p class="lead">There are no registries you have access to.</p>
                </div>
            </div>

            <div ng-if="totalDeposits !== 0" class="row">
                <div class="col-md-4">
                    <% include deposits_sidebar.ejs%>
                </div>
                <div class="col-md-8">
                    <div page-navigation maximum="totalDeposits" current="offset" searchfunction="getRegistry" changepage="changePage" nextpage="nextPage" previouspage="previousPage"></div>

                    <div class="table-container deposits-table">
                        <table class="table table-responsive table-striped table-bordered">
                            <tbody>
                            <tr ng-repeat="deposit in deposits track by $index" buffer-size="20" >
                                <td>
                                    <div class="media">
                                        <div class="media-body">
                                            <span class="media-meta pull-right">{{deposit.date}}</span>
                                            <h4 class="title">
                                                <a href="{{deposit.creator}}"> {{deposit.user}}</a> deposited from the folder <a
                                                        href="{{deposit.folder}}" class="foldersLabel">{{deposit.folderName}}</a> from {{deposit.privacy}} project <a href="{{deposit.projused}}" class="foldersLabel">{{deposit.projectTitle}}</a> in {{deposit.platformsUsed}}
                                            </h4>
                                            <p class="summary">{{deposit.label}}
                                            </p>
                                            <p>
                                                <img src="http://www.edawax.de/wp-content/uploads/2013/09/250_logo-ckan.jpg" class="pull-right" height="20px" width="20px" alt="ckan">
                                                <a href="{{deposit.uri}}" class="pull-right deposit-list-info">See more</a>
                                            </p>

                                        </div>
                                    </div>
                                </td>

                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </section>

    </div>
</div>