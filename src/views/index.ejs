<%- include layout/header.ejs %>

    <link rel='stylesheet' href='/stylesheets/stylish-portfolio.css' />

    <!-- Services -->
    <div id="services" class="services">
      <div class="jumbotron container">
        <div class="row">
          <div class="col-md-4 col-md-offset-4 text-center">
            <h2>Welcome to Dendro Beta</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2 text-center">
            <h4>A linked, open and collaborative research data management platform.</h4>
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3 col-md-offset-2 text-center">
            <div class="service-item">
              <i class="fa fa-file-text fa-6" aria-hidden="true"></i>
              <h3>Read papers<!--<a href="/papers/all">papers</a>--></h3>
              <!--<h4><span class="label label-primary">18917827</span> and counting</h4>-->
              <p>Find relevant bibliography by searching on high-quality metadata. The papers and other documents are contributed by researchers like yourself. </p>
            </div>
          </div>
          <div class="col-md-3 text-center">
            <div class="service-item">
                <i class="fa fa-archive fa-3"></i>
                <h3>Browse datasets<!--<a href="/datasets/all">Datasets</a>--></h3>
                <!--<h4><span class="label label-primary">18917827</span> and counting</h4>-->
                <p>Find high-quality, community-managed datasets, including domain-specific descriptions</p>
            </div>
          </div>
          <div class="col-md-3 text-center">
            <div class="service-item">
              <i class="fa fa-user"></i>
              <h3>Contact researchers<!--<a href="/researchers/all">Researchers</a>--></h3>
              <!--<h4><span class="label label-primary">19811</span> and counting</h4>-->
              <p>Contact researchers who shared <!--<a href="/datasets/all">data</a>--> data on this Dendro</p>
            </div>
          </div>
        </div>
        <button class="col-sm-12 col-xs-12 col-md-4 col-md-offset-4 text-center btn btn-primary btn-xs-block" onclick="console.log(this);this.parentElement.remove()">
            Got it!
        </button>
      </div>
        <div ng-controller="depositCtrl" class="container" ng-init="init()" >
            <div class="row">

                <section class="content">
                    <h3>Latest deposits</h3>
                    <div class="col-sm-12">
                        <div class="table-container">
                            <table class="table table-responsive table-striped table-bordered">
                                <tbody infinite-scroll="getAuthorizedRegistry()" infinite-scroll-distance="0.000000000001">
                                <tr ng-repeat="deposit in deposits track by $index">
                                    <td>
                                        <div class="media">
                                            <div class="media-body">
                                                <span class="media-meta pull-right">{{deposit.date}}</span>
                                                <h4 class="title">
                                                    <a href="{{deposit.creator}}">{{deposit.user}}</a> deposited the folder <a
                                                            href="" class="foldersLabel">boom</a> from {{deposit.privacy}} project <a href="{{deposit.projused}}">{{deposit.title}}</a> in {{deposit.description}}
                                                </h4>
                                                <p class="summary">{{deposit.label}}</p>
                                                <img src="http://www.edawax.de/wp-content/uploads/2013/09/250_logo-ckan.jpg" class="pull-right" height="20px" width="20px" alt="ckan">
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>
    <!-- /Services -->

    </div><!-- /.container -->

<%- include layout/footer.ejs %>
